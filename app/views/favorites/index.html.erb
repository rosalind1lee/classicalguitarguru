<div>
  <div>
    <h1>
      List of all favorites
    </h1>
  </div>
</div>

<div>
  <div>
    <table class="table">
      <tr>

        <th scope="col">
          Piece
        </th>

        <th scope="col">
          Details
        </th>
      </tr>

      <% @list_of_favorites.each do |a_favorite| %>
      <tr>
        <!--
        <td>
          <%= a_favorite.id %>
        </td>
        -->

        <td>
          <%= a_favorite.piece.title %>
        </td>

        <!--
        <td>
          <%= a_favorite.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_favorite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favorite.updated_at) %> ago
        </td>
        -->

        <td>
          <a href="/favorites/<%= a_favorite.id %>">
            Show details
          </a>
        </td>
        

      </tr>
      <% end %>
    </table>
  </div>
</div>


<div>
  <div>
    <h2>
      Add a new favorite
    </h2>

    <form action="/insert_favorite" method="post">
      <div>
        <label for="piece_id_box">
          Piece
        </label>

        <input type="text" name="query_piece_id" id="piece_id_box" list="piece_id_box_list" />
        <datalist id="piece_id_box_list">
          <% @list_of_pieces.each do |a_piece| %>
            <% if a_piece.composer != nil %>
              <option value="<%=a_piece.title+" - "+a_piece.composer.name%>">
            <% else %>
              <option value="<%=a_piece.title+" - "+"Anonymous"%>">
            <% end %>
          <% end %>
        </datalist>

        <!-- <select name="query_piece_id" id="piece_id_box">
          <option disabled selected value> -- select an option -- </option>
          <% @list_of_pieces.each do |a_piece| %>
            <option value="<%=a_piece.id%>">
              <% if a_piece.composer != nil %>
                <%=a_piece.title+" - "+a_piece.composer.name%>
              <% else %>
                <%=a_piece.title+" - "+"Anonymous"%>
              <% end %>
            </option>
          <% end %>
        </select> -->

      </div>

      <!--
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>
      -->

      <button>
        Create favorite
      </button>
    </form>
  </div>
</div>
